@{
    ViewData["Title"] = "Home Page";
}
@model Departamentos

<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>

<div class="justify-content-center align-items-center">
    

    <div class="row">
        <h5>
            Registro de Covid
        </h5>

    </div>

    <div class="row">
       
        El siguiente formulario es para llevar el registro de casos reportados de covid por departamento y genero.
    
    </div>
    

</div>

<div>
    <div class="row p-3">
        <h3>
            Reportar casos
        </h3>
    </div>
</div>

<form asp-action="GuardarRegistro">


    <div class="row p-3">
        <div class="col">

            @Html.Label("Departamento")
            @Html.DropDownList("departamento", (SelectList)ViewData["listadoDeDepartamentos"], "Seleccione un departamento", new {@class="form-control"})

        </div>

        <div class="col-6">
            @Html.Label("Genero")
            @Html.DropDownList("genero", (SelectList)ViewData["listadoDeGenneros"], "Seleccione un genero", new {@class="form-control"})
        </div>

        <div class="form-group row mb-4">
            <div class="col-4">
                @Html.Label("Casos Confirmados")
                @Html.TextBox("casosConfirmados","", new {@class="form-control"})
            </div>
            <div class="col-4">
                @Html.Label("Numero de Recuperados")
                @Html.TextBox("numeroRecuperados","", new {@class="form-control"})
            </div>
            <div class="col-4">
                @Html.Label("Numero de Fallecidos")
                @Html.TextBox("numeroFallecidos","", new {@class="form-control"})
            </div>
        </div>

        <div class="row">
            <input type="submit" class="btn btn-success" value="Guardar" />
            @*Html.ActionLink("Guardar registro", "GuardarRegistro", "Home", new { }, new { @class = "btn btn-success" })*@
        </div>
      <table class="table table-striped">
          <thead>
              <tr>
                  <th>Departamento</th>
                  <th>Genero</th>
                  <th>Confirmados</th>
                  <th>Recuperados</th>
                  <th>Fallecidos</th>
              </tr>
          </thead>
              <tboby>
                @foreach (var casosReport in (IEnumerable<dynamic>)ViewData["casosReportados"])
                {
                    <tr>
                        <td>@casosReport.departamento</td>
                        <td>@casosReport.genero</td>
                        <td>@casosReport.casosConfirmados</td>
                        <td>@casosReport.casosRecuperados</td>
                        <td>@casosReport.casosFallecidos</td>

                    </tr>
                }
              </tboby>
      </table>

        
    </div>


</form>


  
